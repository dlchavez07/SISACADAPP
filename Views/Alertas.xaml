<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SISACADMovil.Views.Alertas"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20" BackgroundColor="Transparent">
            <Frame CornerRadius="15" BackgroundColor="White" Padding="20">
                <StackLayout>
                    <Label x:Name="AlertTitle" Text="Alerta" FontSize="20" FontAttributes="Bold" TextColor="#222B32" />
                    <Label x:Name="AlertMessage" Text="Este es un mensaje de alerta." FontSize="16" TextColor="Black" Margin="0,10,0,10"/>
                    <Button x:Name="OkButton" Text="OK" BackgroundColor="#D2B171" TextColor="White" Clicked="OnOkButtonClicked"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>