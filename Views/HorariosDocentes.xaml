                                                                        <Label Text="{Binding HorasString}" FontSize="13" Padding="5" VerticalOptions="Center" HorizontalOptions="Start"/>
                                                                    </Frame>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </CollectionView.ItemTemplate>
                                                    </CollectionView>
                                                </StackLayout>
                                            </Frame>
