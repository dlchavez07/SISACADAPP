                                                                        <ColumnDefinition Width="250"/>
                                                                        <!-- Ancho fijo de 200 unidades -->
                                                                    </Grid.ColumnDefinitions>

                                                                    <!-- Datos de la jornada -->
                                                                    <Frame Grid.Row="0" Grid.Column="0" BorderColor="Black" CornerRadius="0" Padding="0" Margin="0" BackgroundColor="#232a33">
